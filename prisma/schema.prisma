// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Restaurant {
  id  String @id @default(uuid())
  name String
  address String
  picture Bytes
  openingTime String
  closingTime String
  createdAt DateTime @default(now())
  updateAt DateTime @updatedAt

  @@map("restaurants")
}

model User {
   id  String @id @default(uuid())
   name String
   email String @unique
   createdAt DateTime @default(now())
   updateAt DateTime @updatedAt

   @@map("users")
}

